{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "/home/${USER}/esp/**",
                "/home/${USER}/esp/esp-idf/**",
                "/home/${USER}/.espressif/**",
                "${workspaceFolder}**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],     
            "cStandard": "gnu99",
            "cppStandard": "gnu++11",
            "intelliSenseMode": "linux-gcc-x86",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",
            "browse": {
                "path": [
                    "${workspaceFolder}/",
                    "/home/${USER}/esp/",
                    "/home/${USER}/.espressif/",
                    "${workspaceFolder}"
                ],
                 "limitSymbolsToIncludedHeaders": true     
            }         
        }
    ],
    "version": 4
}